<div class="container page  page-border questionnaire margin-top">
  <div class='row'>
    <div class='col-md-12'>

      <!-- Top Images -->

      <div class="row">
        <div class="col-xs-6">
          <%= image_tag 'custom/heidrick_and_struggles/taq-logo.png', height: "75%", width: "75%" %>
        </div>

        <div class="col-xs-6">
          <div class="pull-right">
            <%= image_tag "custom/heidrick_and_struggles/hs-logo.png", height:"100%", width:"100%" %>
          </div>
        </div>

      </div>


      <!-- Portal Links -->

      <div class='row'>
        <div class='col-md-12 text-right'>
          <%= link_to "Portal", "/hs/taq/portal" %>
          &nbsp;|&nbsp;
          <%= link_to "Logout", "/users/sign_out" %>
        </div>
      </div>

      <!-- Panel One -->

      <div class="row margin-top-x2">

        <div class="col-md-3 col-md-push-9">
          <div class="panel panel-primary">
            <div class="panel-heading">

              <h2 class="panel-title">
                &nbsp;
              </h2>

            </div>
            <!-- Panel body -->
            <div class="panel-body text-center">
              <div class="progress margin-bottom-half">
                <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 79%;">
                  79%
                </div>
              </div>
            </div>

            <div class="text-center margin-bottom">
              Page 6 of 24
            </div>
          </div>
        </div>

        <!-- Panel Two -->

        <div class="col-md-9 col-md-pull-3">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <!--panel body -->

              <h2 class="panel-title">
                Team Accelerator: Additional Comments
              </h2>

            </div>

            <hr>
            <div class="panel-body">



            <div class="question">
              <div class="question-text">
                <p>What is the team doing well?</p>
              </div>
              <div class="question-responses">
                <%= text_area_tag "open_ended_question", "",
                  class: 'form-control',
                  style: 'height: 120px;' %>
                <%= hidden_field_tag "open_ended_question", true %>



                </div>
              </div>

              <div class="panel-body text-center">
                <hr>

                <%= link_to "Back", heidrick_and_struggles_taq_standard_additional_comments_introduction_path, class:"btn btn-default" %>

                  &nbsp;

                <%= link_to "Next", heidrick_and_struggles_taq_standard_thank_you_path, class:"btn btn-primary" %>
              </div>
            </div>
          </div>





        </div>
      </div>

    </div>
  </div>
</div>
