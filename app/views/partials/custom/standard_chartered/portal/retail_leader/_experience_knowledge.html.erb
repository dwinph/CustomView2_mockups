<div class="row">
	<%= form_tag(url: "/search", method: "get") do %>
	  <div class="container-fluid">
	    <div class="pad1">
	    	<div class="column-fluid">
	    		<h1>Sally's experience and knowledge</h1>
		    	<%= render :partial => "partials/custom/standard_chartered/portal/retail_leader/progress_bar", locals: {p: 63} %>
				</div>
				
      	<h2>
      		Tell us more about their career experience and knowledge
      	</h2>
      	
      	<div class="form-group txt-group">
				  <label for="comment">Describe their key strengths in relation to their current experience and knowledge.</label>
					  <textarea class="form-control" rows="10" id="comment"></textarea>
				</div>
				<div class="form-group txt-group">
				  <label for="comment">What do see as gaps in their experience and knowledge? What can they do to fill these?</label>
					  <textarea class="form-control" rows="10" id="comment"></textarea>
				</div>
				
	    </div>
	    
	    <div class="row dir-btns">
					<%= link_to "< Back", "", target:'blank', class:'btn btn-directional pull-left' %>
					<%= submit_tag "Next >", data: { confirm: "Send" }, class: "btn btn-directional btn-right pull-right" %>
			</div>
	    
	  </div>  
	<% end %>
</div>