<div class="row">
	<%= form_tag(url: "/search", method: "get") do %>
	  <div class="container-fluid">
	    <div class="pad1">
	    	<h1>We're here to help</h1>
	    	
	    	<%= render :partial => "partials/custom/standard_chartered/portal/retail_leader/progress_bar", locals: {p: 90} %>
				
      	<p class="p-highlight">
      		To ask us a question please complete this form and press ‘send’. Our team will get back to you via email as soon as possible.
      	</p>
      	
      	<div class="form-group txt-group">
				  <label for="comment" class="label-sub">Sally, write your message here.</label>
					  <textarea class="form-control" rows="10" id="comment"></textarea>
				</div>
				
				<div class="row dir-btns">
					<p class="p-highlight">Do you want a copy of this message sent to you?</p>					
					<label class="custom-radio radio-neutral">
							<input type="radio" name="radio1">
							<div class="card">Yes</div>
					</label>
					<label class="custom-radio radio-neutral">
							<input type="radio" name="radio1">
							<div class="card">No</div>
					</label>
				</div>
	    </div>
	    
	    <div class="row dir-btns">
					<%= link_to "< Back", "", target:'blank', class:'btn btn-directional pull-left' %>
					<%= submit_tag "Save", data: { confirm: "Send" }, class: "btn btn-directional btn-right pull-right", "data-disable-with":"Save" %>
			</div>
	    
	  </div>  
	<% end %>
</div>
