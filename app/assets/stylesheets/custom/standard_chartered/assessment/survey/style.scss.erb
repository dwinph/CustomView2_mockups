$primary: #005984;
$secondary: #062047;
$tertiary: #0094d5;
$success: #27a135;
$disabled: #364655;
$bg-dark: #d2d2d2;
$bg-light: #edeeee;

%rotate-text{
	transform: rotate(-90deg);
	/* Safari */
	-webkit-transform: rotate(-90deg);
	/* Firefox */
	-moz-transform: rotate(-90deg);
	/* IE */
	-ms-transform: rotate(-90deg);
	/* Opera */
	-o-transform: rotate(-90deg);
}

body{
   font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
   font-weight: 300;
}

h1{
	color:$primary;
	font-size: 28px;
	padding:20px 0;
}
.h1-bold{
	color:$primary;
	font-size: 28px;
	font-weight: bolder;
}
.bold-p{
	font-size: 14px;
	font-weight: bold;
	color:$disabled;
}
p{
	font-size: 13px;
	color: $disabled
}
.next-btn{
	background-color: $success;
	color: #ffffff;
	font-weight: bold;
	display: flex;

	.btn-text{
		padding: 0 20px;
		font-size: 20px;
		font-weight: bold;
		color: #fff;
		margin-block-start: 0em;
		margin-block-end: 0em;
		line-height: 1.8;
	}
}
.section-gray{
	background: $bg-light;
	padding: 20px 0;
}
.arrow{
	border-left: 1px solid #fff;
    padding: 0px 20px;
    height: 20px;
    top: 10px;
    position: relative;
}
.setup-content{
	padding: 15px 15px 30px 15px;
}
hr{
	border-top: 1px solid $bg-dark;
}
.container-fluid {
    padding-right: 0px;
	padding-left: 0px;
}
.d-block {
    display: block !important;
}
.py-3{
padding:30px 0;
}

//			HEADER
.logo{
	padding: 30px 0px;
}
.border{
	border-bottom: 10px solid transparent;
	-webkit-border-image: url(../images/border.jpg) 30 round; /* Safari 3.1-5 */
	-o-border-image: url(../images/border.jpg) 30 round; /* Opera 11-12.1 */
	border-image: url(../images/border.jpg) 30 round;
}

//			LANDING
.banner{
	background-color: $tertiary;
	min-height: 500px;
	display: flex;
	align-items: center;
	position: relative;
	background: $tertiary url(../images/globe.png) no-repeat bottom right;

	.info{
		background: #ffffff;
		max-width: 500px;
		padding:30px 50px;

		p{
			color: $disabled;
			font-size: 15px;
		}

		.next-btn{
			background-color: $success;
			color: #ffffff;
			font-weight: bold;
			display: flex;
			margin-top:20px;
		
			.btn-text{
				padding: 0 20px 0 0;
				font-size: 16px;
				font-weight: bold;
				color: #fff;
				margin-block-start: 0em;
				margin-block-end: 0em;
				line-height: 1.8;
			}
		}
		.arrow{
			border-left: 1px solid #fff;
			padding: 0 0 0 20px;
			height: 20px;
			top: 5px;
			position: relative;
		}
	}

	img.people{
		display:none;
	}
}
h3{
	font-weight: bold;
	color: $primary;
	padding:20px;
}
.parts{
	background: #ffffff;
	padding:10px 20px;
	display: flex;
	flex-wrap: wrap;
	border-radius: 30px;

	&-step{
		flex: 1;
		position: relative;

		&:before{
			content: "";
			width: calc(100% - 60px);
			position: absolute;
			border: 2px dotted $bg-dark;
			top:50%;
			margin-top:-1px;
			right: 0;
			margin-right: 10px;
		}

		&:last-child:before{
			display: none;
		}

		.number{
			width: 50px;
			height: 50px;
			border: 5px solid $bg-dark;
			display: flex;
			border-radius: 25px;
			align-items: center;
			justify-content: center;
			position: relative;
			z-index: 1;
			background: #ffffff;
			color:$primary;
			font-weight: bold;
			font-size: 18px;
		}
	}
}
.parts-content{
	padding:10px 20px;
	display: flex;
	flex-wrap: wrap;
	margin-top: -20px;

	.pc{
		flex: 1;
		position: relative;
		min-height: 150px;
		display: flex;
		align-items: center;
		padding-left:50px;

		lead{
			font-weight: bold;
			font-size: 16px;
			color: $primary;
		}

		&:before{
			content: "";
			height: 100%;
			width: 4px;
			position: absolute;
			left: 23px;
			background: $bg-dark;
		}

		&:after{
			content: "";
			position: absolute;
			height: 16px;
			width: 16px;
			border-radius: 100%;
			border: 4px solid $bg-dark;
			bottom: -16px;
			left: 17px;
		}
	}
}

//			FOOTER
.footer{
	background-color: $tertiary;
	padding: 30px;

	.footer-logo{
		display: flex;
		justify-content: flex-end;
	}
}

//			STEPWIZARD
.step{
	padding:30px 15px;
	margin: 0 -20px;
}
.stepwizard-step p {
    margin-top: 10px;
}
.stepwizard-row {
	display: flex;
    justify-content: space-between;
}
.stepwizard {
    display: table;
    width: 100%;
	position: relative;

	&:before{
		top: 18px;
		bottom: 0;
		position: absolute;
		content: "";
		width: 100%;
		border-top:dotted;
		color:$bg-dark;
	}
	
	.btn-primary{
		background: #ffffff;
		border: 5px solid $primary;
		color: $primary;

		&:hover{
			color: $tertiary;
			background: #ffffff;
		}
	}
	.btn.disabled, .btn[disabled], fieldset[disabled] .btn{
		background: #ffffff;
	}
}
.stepwizard-step .btn {
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
}

.stepwizard-step {
	position: relative;

	&:after{
		top: 0;
		position: absolute;
		content: "";
		width: 60px;
		height: 40px;
		background: rgb(255, 255, 255);
		margin-left: -10px;
	}

	&:last-child:before{
		display: none;
	}
}
.btn-circle {
	color: $primary;
    width: 40px;
    height: 40px;
    text-align: center;
	border-radius: 25px;
	position: relative;
	z-index: 1;
	background: #ffffff;
	border: 5px solid $bg-dark;
}

//			PART ONE
.behaviors, .choices{
	padding: 20px 0;
}

.behaviors{
	.q-2{
		display: flex;
		align-items: center;

		&:last-child{
			padding-left:10px;
		}
	}
	textarea{
		width: 100%;
		border-radius: 5px;
	}
	.div-textarea{
		padding:20px 0;
	}
}

.choices{
	.input-group{
		width: 100%
	}
}

.custom-checkbox{
	font-weight: normal;
	width: 100%;

	input[type="checkbox"]{
		display: none !important;

		&:checked + .card{
			background: $bg-light;
			color: $secondary;
			font-weight: 600;

			.card-icon{
				background: $success;
				color: #fff;
			}
		}
		
	}
	.card{
		display: flex;
		align-items: center;
		border:1px solid $bg-dark;
		border-radius: 5px;
		justify-content: space-between;
		width: 100%;

		&-text{
			padding: 10px;
		}

		&-icon{
			padding: 10px 12px;
			border-left: 1px solid $bg-dark;
			width: fit-content;

			.material-icons{
				font-weight: bolder;
				width: 26px;
			}
		}
	}
}


//					PART TWO AND THREE
input[type="radio"]{
	-webkit-appearance: none;
  width: 12px;
	height: 12px;
  border-radius: 50%;
  outline: none;
	border: 2px solid #ffffff;
	&:before{
		content: '';
    display: block;
    width: 60%;
    height: 60%;
    margin: 20% auto;
    border-radius: 50%;
	}
				
	&:checked, &:checked:before{
		border-color:#ffffff;
		background:#ffffff;
	}
}
#step-2, #step-3{
	.legend{
		background: $bg-light;
		padding:20px;

		.container{
			.scales{
				display: flex;
				flex-wrap: wrap;
			}
			lead{
				font-weight: bold;
			}

			.underplayed{
				background: #ffffff;
				border-left:5px solid $secondary;
				padding: 10px;
				margin: 5px;
				width: 100%
			}
			.developing{
				background: #ffffff;
				border-left:5px solid $primary;
				padding: 10px;
				margin: 5px;
				width: 100%
			}
			.performing{
				background: #ffffff;
				border-left:5px solid $tertiary;
				padding: 10px;
				margin: 5px;
				width: 100%
			}
			.excelling{
				background: #ffffff;
				border-left:5px solid $success;
				padding: 10px;
				margin: 5px;
				width: 100%
			}
			.not-relevant{
				background: #ffffff;
				border-left:5px solid #000;
				padding: 10px;
				margin: 5px;
				width: 100%
			}
		}
	}
	.head{
		display: flex;

		.delivery-wrapper{
			display: flex;

			.delivery{
				background: $success;
				padding:10px;
			}
			.insights{
				background: $tertiary;
				padding:10px;
			}
			.client{
				background: #74b959;
				padding:10px;
			}
			.expertise{
				background: $primary;
				padding:10px;
			}

			.delivery-text{
				background: $secondary;
				padding:10px;
				color:#fff;
				font-weight: bold;
				font-size: 18px;
				width: 100%;
			}
		}

		.p-italic{
			font-style: italic;
			padding:10px;
			background: $bg-light;
			border: 1px solid $bg-dark;
			display: block;
			margin-block-start: 0em;
			margin-block-end: 0em;
			margin-inline-start: 0px;
			margin-inline-end: 0px;
		}

		.question-options{
			display: flex;
			flex: 1;
			justify-content: flex-end;
			
			&>div{
				writing-mode: vertical-lr;
				padding: 15px;
				background: $bg-light;
				border: 1px solid $bg-dark;
				font-weight: bold;
				color: $secondary
			}
		}
	}

	.delivery-content{
		border:1px solid $bg-dark;

		.inquiry{
			display: flex;
			width: 100%;

			p{
				margin-block-start: 0em;
				margin-block-end: 0em;
				margin-inline-start: 0px;
				margin-inline-end: 0px;
			}

			&-number{
				background: $bg-light;
				border: $bg-dark;
				font-weight: bold;
				color: $primary;
				padding: 10px 15px;
				display: flex;
    			align-items: center;
			}
			&-text{
				padding: 10px 15px;
				display: flex;
    			align-items: center;
			}
		}
		.inquiry-options{
			justify-content: flex-end;

			.input-group{
				padding:15px 19px;
				border: 1px solid $bg-dark;
				display: flex;
				color: #fff;

				span{
					margin-left:10px;
					font-weight: bold
				}
			}

			.option-1{ background: $secondary}
			.option-2{ background: $primary}
			.option-3{ background: $tertiary}
			.option-4{ background: $success}
			.option-5{ background: $disabled}
		}
	}
}

//					PART FOUR
.wrap{
	padding: 20px 0;
}
#step-4{
	.wrapper-head{
		background: $disabled;
		padding:20px;

		h4{
			color:#fff;
			font-weight: 900;
		}
	}
	.wrapper{
		background: $bg-dark;
		padding:20px;

		textarea{
			width: 100%;
			border-radius: 5px;
			border:none;
			margin-top:10px;
		}
	}
	.ribbon{
		padding:40px;
		display: flex;
		justify-content: center;

		img{
			height:85px;
		}
		
		&-text{
			position: absolute;
			margin-top: 25px;
			color: #fff;
			font-size: 18px;
			font-weight: bold;
		}
	}
}

/* Extra small devices (phones, less than 768px) */
/* No media query since this is the default in Bootstrap */

// Small devices (landscape phones, 576px and up)
@media (max-width: 767.98px) {
	.head{
		.question-options{
			display: none;
		}
	}
	.delivery-content{
		display: block;

		.inquiry-options{
			display: block;
		}
	}
}

@media (min-width: 576px){
	.option{ text-align: center !important}
}

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) { 
	.scales{
		display:flex;
		flex-wrap: wrap;

		.underplayed, .developing, .performing, .excelling, .not-relevant{
			max-width: 18%;
		}
	}
	.d-md-none {
		display: none !important;
	}
	#step-4{
		.ribbon{
			&-text{
				margin-top: 35px;
			}
		}
	}
}

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) {
	.delivery-content{
		display: flex;

		.inquiry-options{
			display: flex;
			justify-content: flex-end;

			.input-group>span{
				color: #fff;
				font-weight: bold;
				display: flex;
			}
		}
	}
	.d-lg-none {
		display: none!important;
	}
}

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px) { 
	.banner{
		img.people{
			display: block;
			max-height: 550px;
			position: absolute;
			bottom: 0;
			right: 0;
		}
	}
}