$text--regular: #404C60;
$text--highlight: #54AAD5;
$text--medium: #3170D9;
$text--neutral--light: #F5F5F5;
$bg--light: #E0EAFA;
$bg--neutral--light: #D4D4D4;
$color_11: #748399;
$color_12: #404C60;
@mixin shadow {
    box-shadow: 0px 5px 7px -1px rgba(204,204,204,0.56);
    -moz-box-shadow: 0px 5px 7px -1px rgba(204,204,204,0.56);
    -webkit-box-shadow: 0px 5px 7px -1px rgba(204,204,204,0.56);
}
@mixin color_transition($gradient_1A, $gradient_1B) {
    background: $gradient_1A;
    background: -moz-linear-gradient(left,$gradient_1A 0%,$gradient_1B 100%);
    background: -webkit-linear-gradient(left,$gradient_1A 0%,$gradient_1B 100%);
    background: linear-gradient(to right,$gradient_1A 0%,$gradient_1B 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$gradient_1A',endColorstr='$gradient_1B',GradientType=0 );
}
@mixin color_transition_vertical($gradient_1A, $gradient_1B) {
    background: $gradient_1A;
    background: -moz-linear-gradient(-45deg,$gradient_1A 0%,$gradient_1B 100%);
    background: -webkit-linear-gradient(-45deg,$gradient_1A 0%,$gradient_1B 100%);
    background: linear-gradient(135deg,$gradient_1A 0%,$gradient_1B 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$gradient_1A',endColorstr='$gradient_1B',GradientType=0 );
}
p, h1, h2, h3, h4, h5, small {
    margin: 0;
    padding: 0;
}
nav {
    @include shadow;
    background: white !important;
    margin-bottom: 0 !important;
    min-height: 60px;
    padding-top: 10px;
    padding-bottom: 10px;
    li {
        &.dropdown {
            a {
                &.dropdown-toggle{
                    height: 60px;
                }
            }
            &.open {
                a {
                    &.dropdown-toggle {
                        @include color_transition_vertical($bg--neutral--light,white);
                        border-color: $bg--neutral--light;
                    }
                }
            }
        }
    }
    a {
        &#hs_logo, &#company_logo {
            display: inline-block;
            margin-top: 10px;
        }
        &#hs_logo {
            margin-right: 25px;
            padding-right: 25px;
            width: 250px;
        }
        &#company_logo {
            background: $bg--neutral--light;
            display: inline-block;
            height: 30px;
            padding: 7px 20px;
            width: 150px;
        }
    }
    .navbar-toggle {
        margin-top: 20px;
    }
    .a__notification {
        border-left: 1px solid $bg--neutral--light;
        border-right: 1px solid $bg--neutral--light;
        color: $text--medium;
        font-weight: 600;
        position: relative;
        text-transform: uppercase;
        .glyphicon-bell {
            color: $text--medium;
            padding-top: 8px;
        }
        .span__badge {
            background: red;
            border-radius: 50px 50px;
            color: white;
            display: block;
            font-size: 10px;
            padding: 0px 7px;
            position: absolute;
            right: 1px;
            top: 10px;
        }
    }
    .a__profile__toggle {
        color: black !important;
        font-weight: 300;
        font-size: 17px;
        img {
            display: inline-block;
            margin: 0 5px 0 5px;
        }
    }
    a.a__profile__summary {
        color: $text--highlight;
        display: block;
        min-width: 250px;
        padding-left: 10px;
        img {
            display: inline-block;
            margin-left: 10px;
            margin-top: -20px;
        }
        span {
            color: $text--highlight;
            display: inline-block;
            font-size: 16px;
            margin: 20px 0 20px 20px;
            small {
                color: $text--regular;
                display: block;
                font-size: 14px;
                font-weight: 600;
                text-transform: uppercase;
            }
        }
    }
    .ul__notification--grouped {
        min-width: 300px;
        padding: 0;
        li {
            border-bottom: 1px solid $bg--neutral--light;
            padding: 20px;
            &:last-child {
                border-bottom: none;
            }
            p, i, a {
                display: inline-block;
            }
            p {
                line-height: 15px;
                width: 85%;
            }
            i {
                font-size: 10px;
                margin-top: -20px;
                padding: 0 10px;
            }
            a {
                color: $text--highlight;
                padding: 0 0 0 35px;
                text-transform: uppercase;
            }
            &:hover {
                @include color_transition($color_11,$color_12);
                a, i, span, small, p {
                    color: $bg--light;
                    &:hover {
                        background: none;
                    }
                }
            }
        }
    }
    .ul__profile--grouped {
        padding: 0;
        li {
            align-items: center;
            border-bottom: 1px solid $bg--neutral--light;
            display: flex;
            font-size: 16px;
            margin: auto;
            padding: 20px;
            &:first-child {
                padding-bottom: 0;
                padding-top: 0;
            }
            &:last-child {
                border-bottom: none;
            }
            &:hover {
                @include color_transition($color_11,$color_12);
                a, i, span, small {
                    color: $bg--light;
                    &:hover {
                        background: none;
                    }
                }
            }
        }
        i {
            font-size: 20px;
            margin: 0 -15px;
            &:first-child {
                margin-left: 20px;
            }
            &.i--rotate {
                transform: rotate(-90deg);
            }
        }
    }
}
img {
    &.img--rounded--small {
        border: 2px solid $text--neutral--light;
        border-radius: 100px;
        height: 35px;
        width: 35px;
    }
    &.img--rounded--large {
        border: 1px solid $bg--neutral--light;
        border-radius: 300px;
        height: 180px;
        width: 180px;
    }
}
@media screen and (max-width:990px) {
    .span__badge {
        left: 35px;
        padding: 0px 10px;
        text-align: center;
        top: 5px;
        width: 20px;
    }
    .main-div--centered {
        button {
            &.pull-right {
                margin: 0 auto;
            }
        }
    }
    .a__notification {
        border-top: 1px solid $bg--neutral--light;
    }
}
@media screen and (max-width:720px) {
    #company_logo {
        margin: 25px 0 0 15px !important;
    }
}
@media screen and (max-width:500px) {
    #company_logo {
        margin: 0 0 0 15px !important;
    }
}