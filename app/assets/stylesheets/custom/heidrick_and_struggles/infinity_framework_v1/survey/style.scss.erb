$primary: #0075B0;
$secondary: #002244;
$tertiary: #005C84;
$highlight: #009FDA;
$highlight-2: #3f9c35;
$highlight-3: #69be28;
$highlight-4: #d63078;
$color-regular: #364655;
$btn-highlight: #008738;
$bg-light: #f3f3f3;
$bg-mid: #eee;

body{/* Permalink - use to edit and share this gradient: https://colorzilla.com/gradient-editor/#ffffff+0,f5f5f5+22,d7dee6+79,d4dbe3+100 */
background: #ffffff; /* Old browsers */
background: -moz-linear-gradient(top,  #ffffff 0%, #f5f5f5 22%, #d7dee6 79%, #d4dbe3 100%); /* FF3.6-15 */
background: -webkit-linear-gradient(top,  #ffffff 0%,#f5f5f5 22%,#d7dee6 79%,#d4dbe3 100%); /* Chrome10-25,Safari5.1-6 */
background: linear-gradient(to bottom,  #ffffff 0%,#f5f5f5 22%,#d7dee6 79%,#d4dbe3 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#d4dbe3',GradientType=0 ); /* IE6-9 */
background-repeat: no-repeat; min-height: 100vh; height: 100%;font-family:"Verdana"; text-align: center;}

.clear{clear:both;}
.fl{float: left;}
.fr{float: right;}
.inl{display: inline-block;vertical-align: middle;}
a{text-decoration: none;
	&:hover, &:focus{text-decoration: none;}
}

.container{position: relative;min-height: 100vh; height: 100%;overflow: hidden;max-width: 1024px; padding-bottom:40px;}

h1{color:#3C3C3C;font-weight: 600;font-size: 20px;margin: 25px 0;text-align: left;}
h2{color:#333E50;font-weight: 400;font-size: 27px;}

header{padding: 20px 0;
	img{max-width: 100%;}
	.logo1{margin: 50px 0 0;max-height: 20px;}
	.logo2{max-height: 80px;}
	.link{ color:#ADACAA; font-size: 10px; margin: 20px 0 0;
		a{color:#ADACAA;
			&:hover{text-decoration: underline;}
		}
	}
}

.maincont{padding: 50px 0;
	.col-6{
		&.cont{ max-width: 470px;width: 100%;margin: 0 auto;
			form{
				input[type=text], input[type=password]{width: 100%;padding: 5px;border-radius: 5px;border:2px solid #536275;color:#536275;font-size: 17px;font-family: "Calibri","Arial";margin: 5px 0;transition: 0.5s;
					&:focus{background: #489864;color:#fff;border:2px solid #489864;box-shadow: 0px 0px 5px rgba(0,0,0,0.5) inset;}
				}
				p{font-size: 14px;text-align: left;margin: 5px 0;color:#333E50;
					&.info{font-size: 14px; color:#536275;}
				}
				.reg_btn{background: #5D6E80;color:#fff;font-family: "Verdana";padding: 10px 15px;font-size: 15px;border-radius: 10px; transition: 0.5s;margin: 25px 0;border:none;
					&:hover{background: #eee;box-shadow: 0px 0px 5px rgba(0,0,0,0.6);color:#000;}
				}
				.sign_in{background: #333E50;color:#fff;font-family: "Verdana";padding: 10px 15px;font-size: 15px;border-radius: 10px; transition: 0.5s;margin:20% 0;border:none;
					&:hover{background: #eee;box-shadow: 0px 0px 5px rgba(0,0,0,0.6);color:#000;}
				}
			}
			.proceed{
				.sign_in{background: #333E50;color:#fff;font-family: "Verdana";padding: 10px 15px;font-size: 15px;border-radius: 10px; transition: 0.5s;margin: 0 0px -10px 25px;border:none;
					&:hover{background: #eee;box-shadow: 0px 0px 5px rgba(0,0,0,0.6);color:#000;}
				}	
			}
		}
		&.contentmain{
			p{font-size: 14px;text-align: left;margin: 5px 0;color:#333E50;margin: 16px 0;}
			.reg_btn{background: #5D6E80;color:#fff;font-family: "Verdana";padding: 10px 25px;font-size: 15px;border-radius: 10px; transition: 0.5s;margin: 20px 5px;border:none;
					&:hover{background: #eee;box-shadow: 0px 0px 5px rgba(0,0,0,0.6);color:#000;}
				}
			form{
				&.abtyou{max-width: 750px;width: 100%;text-align: left;}
				select,input[type=text]{border:none;font-family: "Calibri","Arial";font-size: 15px;background: none;padding: 5px;}
				label{font-size: 15px;font-weight: 600;}
				select{max-width: 200px;width: 100%;}
			}
			hr{border: none;border-top:1px solid #000;margin: 10px 0;}
		}
	}
}

footer{position: absolute;bottom:0px;width: 100%; padding:20px 0 20px;left: 0px;
	p{color:#2E5C5A;font-weight: 600;font-size: 11px;
		a{color:#2E5C5A;transition: 0.5s;text-decoration: underline;
			&:hover{color:#489864;}
		}
	}
}


@media(max-width: 991px){
	.container{padding:5px 20px;}
	header{
		.logo1{float: none;margin: 0 auto 10px;max-height: 16px;}
		.logo2{max-height: 75px;}
		.link{display: none}
	}
}

@media(max-width: 480px){
	h1{text-align: left;font-size: 16px;margin: 10px 0;}
	header{
		.logo2{max-height: 55px;}
	}
	.maincont{padding: 20px 20px 65px;
		.col-6{
			&.cont{
				form{
					input[type=text], input[type=password]{font-size: 12px;}
					p{font-size: 12px;
						&.info{font-size: 10px;}
					}
					.reg_btn{font-size: 12px;}
				}
				.proceed{
					h2{font-size: 16px;}
					.sign_in{margin:0 0 -15px 10px;font-size: 12px;}
				}
			}
			&.contentmain{
				p{font-size: 12px;}
				.reg_btn{font-size: 12px;}
			}
		}
	}
	footer{
		.row{margin: 0;}
		p{font-size: 10px;}
	}
}