$primary: #3C3C3C;
$secondary: #333E50;
$tertiary: #ADACAA;
$highlight: #5D6E80;
$highlight2: #536275;
$highlight3: #489864;
$highlight4: #F5F5F5;
$highlight5: #D7DEE6;
$highlight6: #D4DBE3;
$regular: #2E5C5A;
$drk: #000000;
$bglt: #FFFFFF;
$bgmid: #EEEEEE;
$neutral: #CCCCCC;
body {
   background: $bglt;
   /* Old browsers */
   background: -moz-linear-gradient(top, $bglt 0%, $highlight4 22%, 
$highlight5 79%, $highlight6 100%);
   /* FF3.6-15 */
   background: -webkit-linear-gradient(top, $bglt 0%, $highlight4 22%, 
$highlight5 79%, $highlight6 100%);
   /* Chrome10-25,Safari5.1-6 */
   background: linear-gradient(to bottom, $bglt 0%, $highlight4 22%, 
$highlight5 79%, $highlight6 100%);
   /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
   filter: progid:DXImageTransform.Microsoft.gradient( 
startColorstr='$bglt', endColorstr='$highlight6', GradientType=0);
   /* IE6-9 */
   background-repeat: no-repeat;
   min-height: 100vh;
   height: 100%;
   font-family: "Verdana";
   text-align: center;
   background-attachment: fixed;
}

.clear {
   clear: both;
}

.fl {
   float: left;
}

.fr {
   float: right;
}

.inl {
   display: inline-block;
   vertical-align: middle;
}

a {
   text-decoration: none;
   &:hover,
   &:focus {
     text-decoration: none;
   }
}

.container {
   position: relative;
   min-height: 100vh;
   height: 100%;
   overflow: hidden;
   max-width: 1024px;
}

h1 {
   color: $primary;
   font-weight: 600;
   font-size: 20px;
   margin: 25px 0;
   text-align: left;
}

h2 {
   color: $secondary;
   font-weight: 400;
   font-size: 27px;
}

h3 {
   color: $primary;
   font-weight: 400;
   font-size: 20px;
   font-style: italic;
   text-align: left;
}

header {
   padding: 20px 0;
   img {
     max-width: 100%;
   }
   .logo1 {
     margin: 50px 0 0;
     max-height: 20px;
   }
   .logo2 {
     max-height: 80px;
   }
   .link {
     color: $tertiary;
     font-size: 10px;
     margin: 20px 0 0;
     a {
       color: $tertiary;
       &:hover {
         text-decoration: underline;
       }
     }
   }
}

.maincont {
   padding: 50px 20px 80px;
   margin-bottom: 50px;
   .col-6 {
     &.tprog {
       text-align: left;
       margin-bottom: 35px;
       margin-top: -10px;
       .progbar {
         width: 180px;
         border: 1px solid $highlight;
         text-align: left;
         overflow: hidden;
         height: 30px;
         display: block;
         border-radius: 20px;
         .fill {
           height: 30px;
           background: $highlight;
         }
       }
       .progtext {
         font-size: 10px;
         margin-top: 5px;
       }
     }
     &.cont {
       max-width: 470px;
       width: 100%;
       margin: 0 auto;
       form {
         input[type=text],
         input[type=password] {
           width: 100%;
           padding: 5px;
           border-radius: 5px;
           border: 2px solid $highlight2;
           color: $highlight2;
           font-size: 17px;
           font-family: "Calibri", "Arial";
           margin: 5px 0;
           transition: 0.5s;
           &:focus {
             background: $highlight3;
             color: $bglt;
             border: 2px solid $highlight3;
             box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5) inset;
           }
         }
         p {
           font-size: 14px;
           text-align: left;
           margin: 5px 0;
           color: $secondary;
           &.info {
             font-size: 14px;
             color: $highlight2;
           }
         }
         .reg_btn {
           background: $highlight;
           color: $bglt;
           font-family: "Verdana";
           padding: 10px 15px;
           font-size: 15px;
           border-radius: 10px;
           transition: 0.5s;
           margin: 25px 0;
           border: none;
           &:hover {
             background: $bgmid;
             box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.6);
             color: $drk;
           }
         }
         .sign_in {
           background: $secondary;
           color: $bglt;
           font-family: "Verdana";
           padding: 10px 15px;
           font-size: 15px;
           border-radius: 10px;
           transition: 0.5s;
           margin: 20% 0;
           border: none;
           &:hover {
             background: $bgmid;
             box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.6);
             color: $drk;
           }
         }
       }
       .proceed {
         .sign_in {
           background: $secondary;
           color: $bglt;
           font-family: "Verdana";
           padding: 10px 15px;
           font-size: 15px;
           border-radius: 10px;
           transition: 0.5s;
           margin: 0 0px -10px 25px;
           border: none;
           &:hover {
             background: $bgmid;
             box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.6);
             color: $drk;
           }
         }
       }
     }
     &.contentmain {
       p {
         font-size: 14px;
         text-align: left;
         margin: 5px 0;
         color: $secondary;
         margin: 16px 0;
       }
       .reg_btn {
         background: $highlight;
         color: $bglt;
         font-family: "Verdana";
         padding: 10px 25px;
         font-size: 15px;
         border-radius: 10px;
         transition: 0.5s;
         margin: 20px 5px;
         border: none;
         &:hover {
           background: $bgmid;
           box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.6);
           color: $drk;
         }
       }
       form {
         margin-bottom: 40px;
         &.abtyou {
           max-width: 750px;
           width: 100%;
           text-align: left;
         }
         select,
         input[type=text] {
           border: none;
           border-radius: 5px;
           font-family: "Calibri", "Arial";
           font-size: 15px;
           background: $bglt;
           padding: 5px;
           width: 80%;
           color: $highlight;
         }
         select {
           width: 268px;
           padding: 5px;
           line-height: 1;
           border: 0;
           font-size: 13px !important;
           border-radius: 5px;
           height: 34px;
           background: 
url(http://cdn1.iconfinder.com/data/icons/cc_mono_icon_set/blacks/16x16/br_down.png) 
no-repeat right $bglt;
           -webkit-appearance: none;
           background-position-x: 350px;
         }
         label {
           font-size: 15px;
           font-weight: 600;
         }
         select {
           width: 50%;
         }
       }
       hr {
         border: none;
         border-top: 1px solid $drk;
         margin: 10px 0;
       }
       .intr {
         border-bottom: 1px solid $secondary;
         padding: 10px 0;
         text-align: left;
         &.lst {
           border-bottom: none;
         }
         .qtxt {
           width: 49%;
           ul {
             padding: 0px;
             margin: 0px;
             li {
               position: relative;
               list-style: none;
               width: 30%;
               display: inline-block;
               vertical-align: middle;
               text-align: center;
               input[type=radio] {
                 opacity: 0;
                 z-index: 3;
                 display: block;
                 position: absolute;
                 top: 0px;
                 left: 0px;
                 &:checked+label {
                   background: $secondary;
                   color: $bglt;
                 }
                 &:hover {
                   background: $neutral;
                 }
               }
               label {
                 font-size: 10px;
                 border: 2px solid $secondary;
                 font-weight: 400;
                 width: 100%;
                 border-radius: 10px;
                 padding: 10px 0;
                 background: $bglt;
                 transition: 0.5s;
                 &:hover {
                   cursor: pointer;
                   background: $neutral;
                 }
               }
             }
           }
           &.nt1 {
             width: 25%;
           }
           &.nt2 {
             width: 70%;
             text-align: center;
             ul {
               li {
                 width: 15%;
                 label {
                   height: 50px;
                 }
               }
             }
           }
           &.nt3 {
             width: 79%;
           }
           &.nt4 {
             width: 19%;
             ul {
               li {
                 width: 45%;
               }
             }
           }
           &.tt1,
           &.tt2 {
             width: 14%;
           }
           &.tt2 {
             p {
               text-align: right;
             }
           }
           &.tt3 {
             width: 70%;
             text-align: center;
             padding: 20px 0 0;
             ul {
               li {
                 width: 11%;
               }
             }
           }
           &.lst {
             width: 20%;
             ul {
               li {
                 width: 100%;
               }
             }
           }
         }
       }
       textarea {
         border: 1px solid $secondary;
         background: $bglt;
         border-radius: 10px;
         width: 100%;
         height: 30vh;
         resize: none;
         padding: 10px;
       }
       ul {
         &#sortable {
           padding: 0px;
           margin: 0px auto;
           width: 80%;
           li {
             list-style: none;
             border-top: 1px solid $secondary;
             text-align: left;
             cursor: grab;
             -webkit-touch-callout: none;
             /* iOS Safari */
             -webkit-user-select: none;
             /* Safari */
             -khtml-user-select: none;
             /* Konqueror HTML */
             -moz-user-select: none;
             /* Old versions of Firefox */
             -ms-user-select: none;
             /* Internet Explorer/Edge */
             user-select: none;
             /* Non-prefixed version, currently supported by Chrome, 
Opera and Firefox */
             span {
               font-size: 55px;
               display: inline-block;
               vertical-align: middle;
               font-family: "Arial";
               margin: 0 10px 0 0;
               .material-icons{
                   font-size: 40px;
                   margin-right: 0px;
               }
             }
             div {
               width: 88%;
             }
             &:focus {
               background: $bglt;
             }
           }
         }
       }
     }
   }
}

footer {
   position: absolute;
   bottom: 0px;
   width: 100%;
   padding: 0px 0 20px;
   left: 0px;
   p {
     color: $regular;
     font-weight: 600;
     font-size: 11px;
     a {
       color: $regular;
       transition: 0.5s;
       text-decoration: underline;
       &:hover {
         color: $highlight3;
       }
     }
   }
}

@media(max-width: 991px) {
   .container {
     padding: 5px 20px;
     max-width: 930px;
     width: 100%;
   }
   header {
     .logo1 {
       float: right;
       margin: 10px 22px 10px auto;
       max-height: 16px;
     }
     .logo2 {
       max-height: 75px;
       margin-left: 22px;
     }
     br {
       &.clear {
         display: none;
       }
     }
     .link {
       float: right;
       width: 100%;
       margin-right: 22px;
       text-align: right;
       margin-top: -15px;
     }
   }
   form {
     select {
       background-position-x: 140px !important;
     }
   }
   .maincont {
     .col-6 {
       &.contentmain {
         .intr {
           .qtxt {
             &.nt3 {
               width: 65%;
             }
             &.nt4 {
               width: 33%;
             }
             &.nt2 {
               ul {
                 li {
                   label {
                     height: 60px;
                   }
                 }
               }
             }
             &.tt3 {
               ul {
                 li {
                     padding-left:1px;
                   label {
                     font-size: 9px;
                     border: none;
                     padding: 15px 0;
                     border-radius: 6px;
                   }
                 }
               }
             }
             &.lst {
               width: 70%;
               margin: 0 auto;
             }
           }
         }
         ul {
           &#sortable {
             width: 100%;
             li {
                 span {
                     .material-icons{
                       margin-right: -20px;
                   }
                 }
               p {
                 text-align: center;
               }
             }
           }
         }
       }
     }
   }
   .tt1,
   .tt2 {
     font-weight: bold;
   }
}

@media(max-width: 991px) and (orientation: landscape) {
   form {
     select {
       width: 310px !important;
       background-position-x: 280px !important;
     }
   }
}

@media(max-width: 768px) {
   .maincont {
     .col-6 {
       &.contentmain {
         p {
           font-size: 12px;
         }
         .intr {
           .qtxt {
             width: 100%;
             p {
               text-align: center;
             }
             &.nt1 {
               width: 100%;
             }
             &.nt2 {
               width: 100%;
             }
             &.nt3 {
               p {
                 text-align: left;
               }
             }
             &.tt3 {
               width: 100%;
               ul {
                 li {
                   width: 14%;
                   margin: 0 -2px;
                 }
               }
             }
             &.tt1 {
               width: 49%;
               padding: 10px;
               p {
                 text-align: left;
               }
             }
             &.tt2 {
               width: 49%;
               border-left: 1px solid $secondary;
               padding: 10px;
             }
           }
         }
         form {
           label {
             font-size: 11px;
           }
         }
       }
     }
   }
   h3 {
     font-size: 18px;
   }
   h1 {
     margin: 15px 0;
   }
}

@media(max-width: 480px) {
   h1 {
     text-align: left;
     font-size: 16px;
     margin: 10px 0;
   }
   h3 {
     font-size: 14px;
   }
   header {
     .logo2 {
       max-height: 55px;
     }
   }
   .maincont {
     padding: 20px 20px 80px;
     .col-6 {
       &.cont {
         form {
           input[type=text],
           input[type=password] {
             font-size: 12px;
           }
           p {
             font-size: 12px;
             &.info {
               font-size: 10px;
             }
           }
           .reg_btn {
             font-size: 12px;
           }
         }
         .proceed {
           h2 {
             font-size: 16px;
           }
           .sign_in {
             margin: 0 0 -15px 10px;
             font-size: 12px;
           }
         }
       }
       &.contentmain {
         p {
           font-size: 12px;
         }
         .reg_btn {
           font-size: 12px;
         }
       }
     }
   }
   footer {
     .row {
       margin: 0;
     }
     p {
       font-size: 10px;
     }
   }
}

@media(max-width: 440px) {
   .maincont {
     .col-6 {
       &.contentmain {
         .intr {
           .qtxt {
             &.nt2 {
               ul {
                 li {
                   width: 17%;
                   label {
                     padding: 5px 0;
                     font-size: 9px;
                     height: 65px;
                   }
                 }
               }
             }
             &.tt3 {
               ul {
                 li {
                   label {
                     font-size: 8px;
                   }
                 }
               }
             }
           }
         }
       }
     }
   }
}