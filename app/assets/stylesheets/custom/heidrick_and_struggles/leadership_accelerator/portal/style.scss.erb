@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap');
$accent:#1DABDD;
$neutral: #CCCCCC;
$neutral2: #AAAAAA;
body{padding: 0px;margin: 0px;font-family: "Roboto";text-align: center;background: #fff;position: relative;height: 100vh;padding-bottom: 75px;}

.clear{clear:both;}
.fr{float: right;}
.fl{float: left;}
.inl{display: inline-block;vertical-align: middle;}
a{text-decoration: none;}
h1{color:$accent;font-size: 30px;text-align: left;}
h2{text-align: left; color: $accent; font-size: 24px; margin-top: 40px;}

header{
	.container{border-bottom:1px solid #000;
		.row{padding: 20px 0;
			img{max-width: 100%;}
			.logo2{margin: 20px 0 0;}
			.menubar{
				.links{text-align: center;color:#000;font-weight: 600;font-size: 17px;text-align: right;
					a{color:$accent;transition: 0.5s;}
				}
				.lang{text-align: right;margin: 10px 0;
					span{font-size: 17px;margin: 0 10px;}
				}
			}
		}
	}
}
#maincont{
	&.container{
		.row{
			p{text-align: left;font-size: 16px;}
			table{
				&.raters{width: 100%;
					tr:first-child{background: $accent;
						th{color:#fff;text-align: left;padding: 10px;font-size: 17px;}
					}
					tr{text-align: left;
						td{padding: 10px 5px;
							border-bottom: 1px solid $neutral;
							input[type="text"],select{width: 100%;font-family: 'Roboto';font-size: 16px;color:#000;}
							input[type="text"]{border:none;}
						}
						&.delete_stat{
							color: $neutral2;
						}
					}
				}
			}
			.del_link
			{
				font-size: 10px;
				font-style: italic;
			}
			.appbtn{color:#000;font-size: 17px;padding: 5px 15px;background: #fff;border:1px solid #000;border-radius: 5px;transition: 0.5s;margin: 20px 0;
				&:hover{background: #000;color:#fff;}
			}
		}
	}
}
footer{
	.container{
		.row{padding:20px 0;
			p{color:#000;font-size: 10px;}
		}
	}
}

input[type='text'] {
	border: 1px solid $neutral !important;
	padding: 5px;
}

ul{
	list-style: none;
	margin: 0;
	padding: 0;
	text-align: left;
	&.cont-ul{
		margin: 10px 0 20px 0;
		li{
			text-indent: none;
			position: relative;
			text-align: left;
			line-height: 1.5em;
			margin: 15px 0 0 20px;
			&:before{
				content:" ";
				display: inline-block;
				height: 4px;
				width: 4px;
				margin-right: 15px;
				background: $accent;
				position: absolute;
				top: 8px;
				left: -20px;
			}
		}
	}
}

form{
	text-align: left;
}
select{
	width: 100%;
	font-family: 'Roboto';
	font-size: 16px;
	color:#000;
}

@media(max-width: 991px){
	body{
		margin: 10px 20px;
	}
	*{transition: 0.5s;}
	.logo2 {
		margin-left: 0;
		width: 90%;
	}
	.logo1 {
		margin-left: 5px;
	}
}

@media(max-width: 767px){
	h1{font-size: 22px;}
	header{
		.container{
			.row{padding: 1%;}
			.logo2{float: none;}
			.logo1{max-height: 80px;}
		}
	}
	#maincont{
		&.container{
			.row{padding: 1%;
				p{font-size: 13px;}
				table{
					&.raters{
						tr:first-child{
							th{font-size: 14px;}
						}
						tr{
							td{
								input[type="text"],select{font-size: 13px;}
							}
						}
					}
				}
				.appbtn{font-size: 14px;}
			}
		}
	}
}
