@mixin circle($size) {
  content: "";
  position: absolute;
  border-radius: 50%;
  left: calc(50% - #{$size/2});
  top: calc(50% - #{$size/2});
  width: $size;
  height: $size;
}

$size: 150px;
.progress-pie-chart {
  width: $size;
  height: $size;
  border-radius: 50%;
  background-color: #f3f3f3;
  position: relative;
  &.gt-50 {
    background-color: $primary;
    border:2px solid #f3f3f3;
  }
}
.ppc-progress {
  @include circle($size);
  clip: rect(0, $size, $size, #{$size/2});
  .ppc-progress-fill {
    @include circle($size);
    clip: rect(0, #{$size/2}, $size, 0);
    background: #f3f3f3;
    transform: rotate(60deg);
  }
  .gt-50 & {
    clip: rect(0, #{$size/2}, $size, 0);
    .ppc-progress-fill {
      clip: rect(0, $size, $size, #{$size/2});
      background: #FFFFFF;
    }
  }
}
.ppc-percents {
  @include circle(#{$size/1.15});
  background: #FFFFFF;
  text-align: center;
  display: table;
  span {
    display: block;
    font-size: 2.6em;
    font-weight: bold;
    color: $text-color;
  }
  small{
    font-weight: normal;
    display: block;
    width: 100px;
    margin: 0 auto;
  }
}
.pcc-percents-wrapper {
  display: table-cell;
  vertical-align: middle;
  font-weight: bold;

  h2{
    margin-top:10px;
    font-weight: 600;
  }
}

