.sign-in{
    .input-group{
        .form-control{
            width: 400px;
        }
        ::placeholder {
            color: $primary-color;
            opacity: 1; /* Firefox */
          }
          
          :-ms-input-placeholder { /* Internet Explorer 10-11 */
           color:  $primary-color;
          }
          
          ::-ms-input-placeholder { /* Microsoft Edge */
           color:  $primary-color;
          }
    }
    input.form-control{
        border:0px;
        background-color: $textbox-bg;
    }
}

.agree{
    input[type="checkbox"]{
        -webkit-appearance: initial;
        appearance: initial;
        background: $textbox-bg;
        width: 20px;
        padding:10px;
        height: 20px;
        border: none;
        position: relative;
        font-weight: bolder;
        
    }
    input[type="checkbox"]:checked {
        background: $textbox-bg;
    }
    input[type="checkbox"]:checked:after {
        content: 'X';
        color: #fff;
        position: absolute;
        left: 50%;
        top: 50%;
        -webkit-transform: translate(-50%,-50%);
        -moz-transform: translate(-50%,-50%);
        -ms-transform: translate(-50%,-50%);
        transform: translate(-50%,-50%);
        font-weight: 400;
    }
}

